<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/nama_pelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nama Pembeli:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kode_barang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_pelanggan"
        android:layout_marginTop="20dp"
        android:text="Kode Barang:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nama_barang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kode_barang"
        android:layout_marginTop="20dp"
        android:text="Nama Barang:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/harga_barang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_barang"
        android:layout_marginTop="20dp"
        android:text="Harga Barang:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jumlah_barang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/harga_barang"
        android:layout_marginTop="20dp"
        android:text="Jumlah:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jumlah_barang"
        android:layout_marginTop="20dp"
        android:text="Total Harga:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/diskon_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_harga"
        android:layout_marginTop="20dp"
        android:text="Diskon Harga:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/diskon_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diskon_harga"
        android:layout_marginTop="20dp"
        android:text="Diskon Member:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jumlah_bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diskon_member"
        android:layout_marginTop="20dp"
        android:text="Jumlah Bayar:"
        android:textSize="16sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jumlah_bayar"
        android:layout_marginLeft="150dp"
        android:text="Share"
        android:layout_marginTop="16dp"
        android:onClick="shareResult" />


</RelativeLayout>
